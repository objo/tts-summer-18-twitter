<div class="row">
  <div class="user_profile col-4">
    <%= image_tag "user_icon.png", width: "100px" %>
    <br>
    <p>@<%= user.username %></p>
    <p><%= user.full_name %></p>
    <p><%= user.city %>,  <%= user.state %></p>
    <br>
    <p><%= user.bio %></p>
  </div>

  <div class="message_list col-8">
    <% user.messages.each do |message| %>
      <div class="message">
        <%= image_tag "user_icon.png"%>
        <p><%= message.body %></p>
        <br>
        <p class="message-date"><%= time_ago_in_words(message.created_at) %></p>
      </div>
    <% end %>
  </div>
</div>
